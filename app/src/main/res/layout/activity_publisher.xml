<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PublisherActivity">

    <ImageButton
        android:id="@+id/marvelBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/marvel_button_background"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/marvel_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dcBtn"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintVertical_bias="0.5"/>

    <ImageButton
        android:id="@+id/dcBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dc_button_background"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/dc_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marvelBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintVertical_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>
